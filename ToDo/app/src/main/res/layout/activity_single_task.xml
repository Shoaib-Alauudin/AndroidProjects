<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/padd_16"
    tools:context="com.example.ghulam.myapplicationtodo.singleTask">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        app:cardBackgroundColor="@android:color/holo_blue_light"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/singleTask"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_20"
                android:maxLines="1"
                android:text="@string/singleTask_textView"
                android:textColor="@android:color/white"
                android:textSize="@dimen/singleTask_textView" />


            <TextView
                android:id="@+id/singleTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textSize="@dimen/taskName_textSize_20"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginTop="@dimen/mar_80"
                android:text="@string/singleTime" />

        </RelativeLayout>






    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="@dimen/mar_10">


        <Button
            android:id="@+id/updateButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_30"
            android:text="@string/updateButton"
            android:clickable="false"/>


        <Button
            android:id="@+id/deleteButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_30"
            android:text="@string/deleteButton" />

    </LinearLayout>

</LinearLayout>
