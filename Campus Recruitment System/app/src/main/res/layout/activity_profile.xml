<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context="com.example.ghulam.campussystem.ProfileActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/colorAccent"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap on camera to choose profile picture"
        android:textAlignment="center"
        android:padding="@dimen/padd_8"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/padd_8"
            android:background="@drawable/icon_camera"
            android:scaleType="centerCrop" />

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editTextDisplayName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padd_16"
        android:layout_marginRight="@dimen/padd_16"
        android:layout_marginBottom="@dimen/padd_16"
        android:hint="Enter Display Name"
        android:inputType="textPersonName|textAutoComplete|textAutoCorrect"/>

    <EditText
        android:id="@+id/editTextEducation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padd_16"
        android:layout_marginRight="@dimen/padd_16"
        android:layout_marginBottom="@dimen/padd_16"
        android:hint="Education"
        android:maxLines="1"
        android:inputType="textAutoComplete|textAutoCorrect|textCapWords"/>

    <EditText
        android:id="@+id/editTextContact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padd_16"
        android:layout_marginRight="@dimen/padd_16"
        android:layout_marginBottom="@dimen/padd_16"
        android:hint="Contact NUmber"
        android:inputType="numberDecimal"/>

    <!--android:id="@+id/textViewVerified"-->

    <EditText
        android:id="@+id/editViewSkills"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padd_16"
        android:layout_marginRight="@dimen/padd_16"
        android:maxLines="1"
        android:hint="Skills"
        android:inputType="textLongMessage"/>
    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/padd_16"
        android:background="@drawable/rounded_button_solid"
        android:paddingLeft="55dp"
        android:paddingRight="55dp"
        android:text="Save"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false" />

</LinearLayout>
