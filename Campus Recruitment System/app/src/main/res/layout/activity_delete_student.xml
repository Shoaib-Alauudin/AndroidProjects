<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/padd_8"
    android:background="@drawable/rounded_button_transparent"
    tools:context="com.example.ghulam.campussystem.AdminPanel.Students.DeleteStudent">

    <ImageView
        android:id="@+id/studentImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/studenticon" />

    <TextView
        android:id="@+id/studentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/name"
        android:gravity="center"
        android:textStyle="bold|italic"
        android:layout_marginTop="@dimen/padd_16"
        android:layout_marginBottom="@dimen/padd_16"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/education"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/studentQualification"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="50dp"
            android:text="Qualification"
            android:gravity="center|left"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>



    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#62c8f7"
        android:layout_marginLeft="@dimen/padd_16"
        android:layout_marginRight="@dimen/padd_16"
        android:layout_marginBottom="@dimen/padd_8"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/mailicon"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/studentEmail"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="50dp"
            android:text="Email"
            android:gravity="center|left"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#62c8f7"
        android:layout_marginLeft="@dimen/padd_16"
        android:layout_marginRight="@dimen/padd_16"
        android:layout_marginBottom="@dimen/padd_8"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:src="@drawable/call1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="3"/>

        <TextView
            android:id="@+id/studentContactNumber"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="50dp"
            android:text="0333 1992995"
            android:gravity="center|left"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#62c8f7"
        android:layout_marginLeft="@dimen/padd_16"
        android:layout_marginRight="@dimen/padd_16"
        android:layout_marginBottom="@dimen/padd_8"/>



    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Delete"
        android:background="@drawable/rounded_button_solid"
        android:layout_marginLeft="@dimen/padd_32"
        android:layout_marginRight="@dimen/padd_32"
        android:layout_marginTop="@dimen/padd_32"/>

</LinearLayout>
