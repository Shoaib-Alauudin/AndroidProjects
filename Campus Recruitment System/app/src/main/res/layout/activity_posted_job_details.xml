<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ghulam.campussystem.AppliedStudentsForJobs.PostedJobDetails">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:titleTextColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/jobtitle_comPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Job Title"
        android:gravity="center"
        android:layout_marginLeft="@dimen/padd_8"
        android:textSize="36sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#67bdfa"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginBottom="@dimen/padd_8"/>

    <TextView
        android:id="@+id/description_comPost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="18dp"
        android:maxLines="5"
        android:gravity="center|left"
        android:paddingTop="@dimen/padd_8"
        android:paddingBottom="@dimen/padd_8"
        android:layout_marginLeft="@dimen/padd_8"
        android:layout_marginRight="@dimen/padd_8"
        android:layout_marginBottom="@dimen/padd_8"
        android:text="Description : sdksadmaskcmsklcmsaklcmksmcksmcsmckscmksmcksmcksmckmsacmsacmksmckasmckmsmsckmsckmaskcmsakmckmsckmsckmaskcmsak" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/applied_student_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:layout_marginLeft="@dimen/padd_8"
        android:layout_marginRight="@dimen/padd_8"
        android:layout_marginBottom="@dimen/padd_8">
    </android.support.v7.widget.RecyclerView>



</LinearLayout>
