<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="@dimen/padd_8"
    android:layout_marginBottom="@dimen/padd_32"
    tools:context="com.example.ghulam.campussystem.AdminPanel.Students.DeleteStudent">

    <ImageView
        android:id="@+id/studentImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.5"
        android:src="@drawable/studenticon" />

    <TextView
        android:id="@+id/studentName"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/name"
        android:gravity="center"
        android:textStyle="bold|italic"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:gravity="center|left"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/padd_8"
            >


            <ImageView
                android:src="@drawable/education"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/padd_16"/>

            <ImageView
                android:src="@drawable/mailicon"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/padd_16"/>


            <ImageView
                android:src="@drawable/call1"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="@dimen/padd_16"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">



            <TextView
                android:id="@+id/studentQualification"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Qualification"
                android:gravity="center|left"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="@dimen/padd_16"/>

            <TextView
                android:id="@+id/studentEmail"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Email"
                android:gravity="center|left"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="@dimen/padd_16"/>


            <TextView
                android:id="@+id/studentContactNumber"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="0333 1992995"
                android:gravity="center|left"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginBottom="@dimen/padd_16"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Delete"
        android:background="@drawable/rounded_button_solid"
        android:layout_margin="@dimen/padd_16"/>

</LinearLayout>
